<%= javascript_include_tag "prototype"%>

<%#= stylesheet_link_tag "demo_table" %>
<%= stylesheet_link_tag "demo_table_jui" %>
<%= stylesheet_link_tag "demo_page" %>

<%=javascript_include_tag "jquery_data_table" %>
<%=javascript_include_tag "jquery.dataTables.min" %>

<script>
  function dataT(){
    $('#events').dataTable({ "aaSorting": [] }); 
  }
</script>


<style type="text/css">

.thumb {
    width: 75px;
    height: 75px;
  }


 #events {
   border-style: solid;
   border-width: 0px;
 }

 #events td , th{                                                               
   border-style: solid;                                                         
   border-width: 0px;                                                           
   text-align: justify;                                                         
   background-color: #D3D6FF !important;                                        
   border-style: solid;                                                         
   border-width: 1px;                                                           
 }                                                                              
                                                                                
</style>

<div>
  <font color="#1D4A75" style="font-size:14px;font-weight:bold;">CALENDER EVENTS</font>
  <hr style="background-color:#1D4A75;height:3px;"></hr>
</div>


<p>

  <table class="display" class="display" id="events" style="width:99%;font-size:11px;">
    <thead>
      <tr>
        <th>Event</th>
        <th>Venue</th>
        <th>Date</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
     <%(@events || []).each do |event|%>
      <tr class="gradeX">
        <td class="center" width="200"><%=event.title%></td>
        <td class="center"><%=event.venue%></td>
        <td class="center" width="120"><%=event.date.strftime("%A, %d %b %Y")%></td>
        <td class="center" width="50"><a href="/femcom/event?id=<%=event.id%>">View</a></td>
      </tr>
     <%end%>
    </tbody>
  </table> 

</p>


<script>
  dataT();
</script>
