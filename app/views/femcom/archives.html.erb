<%= stylesheet_link_tag "demo_page" %>

<%=javascript_include_tag "jquery_data_table" %>
<%=javascript_include_tag "jquery.dataTables.min" %>

<script>
  function dataT(){
    $('#events').dataTable({ "aaSorting": [] });
  }
</script>


<style type="text/css">

.thumb {
    width: 75px;
    height: 75px;
  }


 #events {
   border-style: solid;
   border-width: 0px;
 }



 #events td , th{
   border-style: solid;
   border-width: 0px;
   text-align: justify;
   background-color: #D3D6FF !important;                                        
   border-style: solid;                                                         
   border-width: 1px;
 }

 #events a {
  text-decoration: none; 
 }
</style>

<div>
  <font color="#1D4A75" style="font-size:14px;font-weight:bold;">ARCHIVES</font>
  <hr style="background-color:#1D4A75;height:3px;"></hr>
</div>


<p>                                                                             
                                                                                
<table class="display" class="display" id="events" style="width:99%;font-size:11px;">
<thead>                                                                         
  <tr>                                                                          
    <th>Headline</th>                                                           
    <th>Date posted</th>                                                        
  </tr>                                                                         
</thead>                                                                        
<tbody>                                                                         
 <%(@news || []).each do |post|%>                                               
  <tr class="gradeX">                                                           
    <td class="center" width='400'><a href="/news/post?id=<%=post.id%>"><%=post.title%></a></td>
    <td class="center"><%=post.created_at.strftime('%A, %d %b %Y')%></td>                                
  </tr>                                                                         
 <%end%>                                                                        
</tbody>                                                                        
</table>                                                                        
                                                                                
</p>  

<script>
  dataT();
</script>
