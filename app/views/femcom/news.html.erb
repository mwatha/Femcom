<%= javascript_include_tag "prototype"%>

<%#= stylesheet_link_tag "demo_table" %>
<%= stylesheet_link_tag "demo_table_jui" %>
<%= stylesheet_link_tag "demo_page" %>

<%=javascript_include_tag "jquery_data_table" %>
<%=javascript_include_tag "jquery.dataTables.min" %>

<script>
  function dataT(){
    $('#events').dataTable();
  }
</script>


<style type="text/css">

body { 
  font-size: 12px;
}

.thumb {
    width: 75px;
    height: 75px;
  }


 #events {
   border-style: solid;
   border-width: 0px;
   font: 100%/1.45em "Lucida Grande",Verdana,Arial,Helvetica,sans-serif;
 }



 #events td , th{
   border-style: solid;
   border-width: 0px;
   text-align: justify;
 }


</style>

<div>
  <font color="#1D4A75" face="Arial Narrow" class="ws9">News</font>
  <hr style="background-color:#1D4A75;height:3px;"></hr>
</div>


<p>                                                                             
                                                                                
<table class="display" class="display" id="events" style="width:99%;font-size:10px;">
<thead>                                                                         
  <tr>                                                                          
    <th>Headline</th>                                                           
    <th>Date posted</th>                                                        
  </tr>                                                                         
</thead>                                                                        
<tbody>                                                                         
 <%(@news || []).each do |news|%>                                               
  <tr class="gradeX">                                                           
    <td class="center"><a href="/news/post?id=<%=news.id%>"><%=news.title%></a></td>
    <td class="center"><%=news.created_at%></td>                                
  </tr>                                                                         
 <%end%>                                                                        
</tbody>                                                                        
</table>                                                                        
                                                                                
</p>  

<script>
  dataT();
</script>
