  table { 
    color: #554433;
    font-size: 12px;   
  }
 
  #submitbtn {
  }

</style>

<script>
  function deleteVideo(id) {                                                  
    location="/user/delete_post?id=" + id + "&type=delete_video";             
  }                                                                             
    
</script>


<div id='news'>
<%if flash[:notice]%>                                                           
  <font id="flash_notice" style="color: green"><%= flash[:notice] %></font><br /> 
<%end%>
<form action='video_edit' method="post">
<table>
<tr>
  <td>Titile:</td><td>&nbsp;<input type='text' name='title' size="50" value="<%=@video.title%>" /></td>
</tr>
<tr>
  <td>Youtube-ID:</td><td>&nbsp;<input type='text' name='link' size="50" value="<%=@video.link%>"  /></td>
</tr>
<tr>
  <td style="vertical-align: top;">Description:</td>
  <td>&nbsp;<textarea name='description' cols='99%' rows='20%'>
    <%=render(:inline => (@video.description || ''))%>
  </textarea>
  </td>
</tr>
<tr>
  <td colspan="2">&nbsp;</td>
</tr>
<tr>
  <td colspan="2">
    <input type='button' value = 'Delete' id = 'deletebtn' style="width:45%;" onclick="javascript:deleteVideo('<%=@video.id%>')"/>&nbsp;
    <input type='submit' value = 'Update' id = 'submitbtn' style="width:45%;" />
  </td>
</tr>
</table>
<input type='hidden' name = 'id' value = "<%=@video.id%>" />
</form>
