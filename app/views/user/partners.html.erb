<%= javascript_include_tag "prototype"%>

<%#= stylesheet_link_tag "demo_table" %>
<%= stylesheet_link_tag "demo_table_jui" %>
<%= stylesheet_link_tag "demo_page" %>

<%=javascript_include_tag "jquery_data_table" %>
<%=javascript_include_tag "jquery.dataTables.min" %>

<script>
  function dataT(){
    $('#events').dataTable({ "aaSorting": [] });
  }

  function edit(id) {
    document.location = "/user/partner_edit?id=" + id;
  }
</script>


<style type="text/css">

.thumb {
    width: 75px;
    height: 75px;
  }


 #events {
   border-style: solid;
   border-width: 0px;
 }



 #events td , th{
   border-style: solid;
   border-width: 0px;
   text-align: justify;
 }


</style>

<div>
  <font color="#1D4A75" style="font-size:14px;font-weight:bold;">PARTNERS - EDIT</font>
  <hr style="background-color:#1D4A75;height:3px;"></hr>
</div>


<p>                                                                             

<font id="flash_notice" style="color: green"><%= flash[:notice] %></font>
                                                                                
<table class="display" class="display" id="events" style="width:99%;font-size:11px;">
<thead>                                                                         
  <tr>                                                                          
    <th>Name</th>                                                           
    <th>Link</th>                                                           
    <th>Description</th>                                                           
    <th>&nbsp;</th>                                                        
  </tr>                                                                         
</thead>                                                                        
<tbody>                                                                         
 <%(@partners || []).each do |partner|%>                                               
  <tr class="gradeX">                                                           
    <td class="center"><%=partner.name%></td>                                
    <td class="center"><%=partner.link%></td>                                
    <td class="center"><%=partner.description[0..39]%></td>                                
    <td class="center"><input type="checkbox" onclick="javascript:edit('<%=partner.id%>')" /></td>
  </tr>                                                                         
 <%end%>                                                                        
</tbody>                                                                        
</table>                                                                        

<input type="button" style="width:100%;" value="Add partner" onclick="javascript:location='/user/new_partner'" />
                                                                                
<script>
  dataT();
</script>
